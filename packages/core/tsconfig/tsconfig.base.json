{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "..",
    "rootDir": "../src",
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "target": "es2022",
    "module": "es2022",
    "lib": ["es2022", "DOM"],
    "sourceMap": true,
    "isolatedModules": true,
    "allowJs": true,
    "downlevelIteration": true,
    "jsx": "react",
    "paths": {
      "@/*": ["../src/*"]
    },
    "outDir": "../dist"
  },
  "include": ["../src/**/*"],
  "exclude": ["node_modules", "../src/**/*.test.ts", "**/*.test.tsx"]
}
